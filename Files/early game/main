#start with this
harvest()
harvest()
harvest()
harvest()
do_a_flip()



#after unlock while
while True:
	if can_harvest():
		harvest()
	if can_harvest():
		harvest()



#next up after unlocking if statements

while move(North):
	if can_harvest():
		harvest()
		plant(Entities.Bush)



#after unlocking operators

while move(North):
	while True:
		if get_pos_y() == 0:
			if can_harvest():
				harvest()
			if get_ground_type() == Grounds.Grassland:
				till()
			if get_ground_type() == Grounds.Soil:
				plant(Entities.Carrot)
		if get_pos_y() == 1:
			if can_harvest():
				harvest()
				plant(Entities.Bush)
				print(get_water())
			if get_water() == False:
				use_item(Items.Water)
		if get_pos_y() == 2:
			harvest()
			#do_a_flip()
			#pet_the_piggy()
			move(East)
		break



